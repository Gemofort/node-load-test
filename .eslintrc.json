{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-console": "off",
        "camelcase": "off",
        "no-await-in-loop": "off",
        "max-len": ["warn", 120],
        "no-plusplus": "off"
    }
}
